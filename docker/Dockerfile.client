FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy client files
COPY client.py .
COPY setup.py .

# Install as package
RUN pip install -e .

# Create non-root user
RUN useradd -m -u 1000 client
USER client

ENTRYPOINT ["online"]